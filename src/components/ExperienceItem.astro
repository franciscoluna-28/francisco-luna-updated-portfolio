---
const { title, company, description, link, date } = Astro.props;
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-mainGray/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-main-300 -left-[43px] absolute rounded-full text-5xl">
        •
      </span>
      <h3 class="text-xl font-bold text-main-300">{title}</h3>
      <h4 class="font-semibold text-xl text-white dark:text-white">
        {company}
      </h4>
      <time class="p-0 m-0 text-sm text-white/80 dark:text-white/80">
        {date}
      </time>
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 text-mainGray dark:text-gray-300 md:col-span-3"
  >
    {description}
    {
      link && (
        <a href={link}>
          Saber más
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M9 6l6 6l-6 6" />
          </svg>
        </a>
      )
    }
  </div>
</div>
